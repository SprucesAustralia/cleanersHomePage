                    <label for="q20d">d) Ignore the grout lines</label>
                </fieldset>
            </form>
            <button onclick="prevSection()">Back</button>
            <button onclick="submitForm()">Submit</button>
        </div>
    </div>

    <script>
        // Define all 45 sections (0 to 44)
        const sections = Array.from({length: 45}, (_, i) => `section${i}`);
        let currentSection = 0;
        let formData = {
            name: '',
            phone: '',
            email: '',
            answers: {}
        };

        // Initialize Supabase client (replace with your credentials)
        const supabaseClient = supabase.createClient(
            'https://cuoqvccjoymctjucrhbb.supabase.co', // Replace with your Supabase URL
            'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImN1b3F2Y2Nqb3ltY3RqdWNyaGJiIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDEzMzM1MzAsImV4cCI6MjA1NjkwOTUzMH0.Ca1kkg26rYt-TNMmXbBo2Gg1sYrIKK0Y1vxJwPpxvnA' // Replace with your Supabase public anon key
        );

        function updateProgress() {
            const progress = (currentSection / 44) * 100;
            document.getElementById('progress').style.width = `${progress}%`;
        }

        function showSection(index) {
            document.querySelectorAll('.section').forEach((section, i) => {
                section.classList.toggle('active', i === index);
                section.classList.toggle('hidden', i !== index);
            });
            updateProgress();
        }

        // Helper function to get question number from section
        function getQuestionNumber(section) {
            if (section >= 2 && section <= 28 && section % 2 === 0) {
                return section / 2;
            } else if (section >= 39 && section <= 44) {
                return section - 24;
            }
            return null;
        }

        // Helper function to get section number from question number
        function getSectionFromQuestion(questionNum) {
            if (questionNum >= 1 && questionNum <= 14) {
                return 2 * questionNum;
            } else if (questionNum >= 15 && questionNum <= 20) {
                return 24 + questionNum;
            }
            return null;
        }

        function nextSection() {
            const questionNum = getQuestionNumber(currentSection);
            const isFormSection = currentSection === 0 || questionNum !== null;

            if (isFormSection) {
                const form = document.getElementById(`form${currentSection}`);
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }
            }

            if (currentSection === 0) {
                formData.name = document.getElementById('name').value;
                formData.phone = document.getElementById('phone').value;
                formData.email = document.getElementById('email').value;
            } else if (questionNum !== null) {
                const selected = document.querySelector(`input[name="q${questionNum}"]:checked`);
                if (selected) {
                    formData.answers[`q${questionNum}`] = selected.value;
                }
            }

            if (currentSection < sections.length - 1) {
                showSection(currentSection + 1);
                currentSection++;
            }
        }

        function prevSection() {
            if (currentSection > 0) {
                showSection(currentSection - 1);
                currentSection--;
            }
        }

        async function submitForm() {
            const form = document.getElementById('form44');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            const questionNum = getQuestionNumber(currentSection);
            const selected = document.querySelector(`input[name="q${questionNum}"]:checked`);
            if (selected) {
                formData.answers[`q${questionNum}`] = selected.value;
            }

            // Ensure all questions are answered
            for (let i = 1; i <= 20; i++) {
                if (!formData.answers[`q${i}`]) {
                    alert(`Please answer question ${i} before submitting.`);
                    const section = getSectionFromQuestion(i);
                    showSection(section);
                    currentSection = section;
                    return;
                }
            }

            const dataToInsert = {
                name: formData.name,
                phone: formData.phone,
                email: formData.email,
                ...Object.fromEntries(
                    Array.from({length: 20}, (_, i) => [`answer${i+1}`, formData.answers[`q${i+1}`]])
                )
            };

            try {
                const { data, error } = await supabaseClient
                    .from('post_construction_course')
                    .insert([dataToInsert]);

                if (error) {
                    console.error('Error inserting data:', error);
                    alert('Error saving data: ' + error.message);
                } else {
                    alert('Course completed successfully! Your responses have been saved.');
                    formData = { name: '', phone: '', email: '', answers: {} };
                    showSection(0);
                    currentSection = 0;
                }
            } catch (err) {
                console.error('Unexpected error:', err);
                alert('An unexpected error occurred. Please try again.');
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            showSection(0);
        });
    </script>
</body>
</html>
