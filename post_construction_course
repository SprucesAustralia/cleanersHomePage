    <!-- Section 37: Final Message -->
    <div id="section37" class="section hidden">
        <h2>Thank You for Completing the Course!</h2>
        <p>Congratulations on finishing the Post-Construction Cleaning Course! You’ve gained valuable techniques to tackle any cleaning job with confidence. We hope you found this journey helpful and enjoyable.</p>
        <button onclick="prevSection()">Back</button>
        <button onclick="submitForm()">Submit</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script>
        // Initialize Supabase client (replace with your credentials)
        const supabase = Supabase.createClient('YOUR_SUPABASE_URL', 'YOUR_SUPABASE_KEY');

        const sections = Array.from({length: 38}, (_, i) => `section${i}`);
        let currentSection = 0;
        const formData = {
            name: '',
            phone: '',
            email: '',
            answers: {}
        };

        function showSection(sectionNum) {
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
                section.classList.add('hidden');
            });
            document.getElementById(sections[sectionNum]).classList.remove('hidden');
            document.getElementById(sections[sectionNum]).classList.add('active');
            updateProgress();
        }

        function updateProgress() {
            const progress = (currentSection / 37) * 100;
            document.getElementById('progress').style.width = `${progress}%`;
        }

        function nextSection() {
            const isFormSection = document.getElementById(sections[currentSection]).querySelector('form');
            if (isFormSection) {
                const form = document.getElementById(`form${currentSection}`);
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }
                if (currentSection === 0) {
                    formData.name = form.querySelector('input[name="name"]').value;
                    formData.phone = form.querySelector('input[name="phone"]').value;
                    formData.email = form.querySelector('input[name="email"]').value;
                } else if (currentSection >= 2 && currentSection <= 28 && currentSection % 2 === 0) {
                    const questionNum = currentSection / 2;
                    const selected = document.querySelector(`input[name="q${questionNum}"]:checked`);
                    if (selected) {
                        formData.answers[`q${questionNum}`] = selected.value;
                    }
                } else if (currentSection === 31) {
                    for (let i = 15; i <= 17; i++) {
                        const selected = document.querySelector(`input[name="q${i}"]:checked`);
                        if (selected) {
                            formData.answers[`q${i}`] = selected.value;
                        }
                    }
                } else if (currentSection === 33) {
                    for (let i = 18; i <= 20; i++) {
                        const selected = document.querySelector(`input[name="q${i}"]:checked`);
                        if (selected) {
                            formData.answers[`q${i}`] = selected.value;
                        }
                    }
                }
            }
            if (currentSection < sections.length - 1) {
                currentSection++;
                showSection(currentSection);
            }
        }

        function prevSection() {
            if (currentSection > 0) {
                currentSection--;
                showSection(currentSection);
            }
        }

        async function submitForm() {
            for (let i = 1; i <= 20; i++) {
                if (!formData.answers[`q${i}`]) {
                    alert(`Please answer question ${i} before submitting.`);
                    return;
                }
            }
            const dataToInsert = {
                name: formData.name,
                phone: formData.phone,
                email: formData.email,
                ...Object.fromEntries(
                    Array.from({length: 20}, (_, i) => [`answer${i+1}`, formData.answers[`q${i+1}`]])
                )
            };
            const { data, error } = await supabase
                .from('post_construction_course')
                .insert([dataToInsert]);
            if (error) {
                console.error('Error submitting form:', error);
                alert('There was an error submitting your answers. Please try again.');
            } else {
                alert('Thank you! Your answers have been submitted successfully.');
            }
        }

        // Initialize the first section
        showSection(0);
    </script>
</body>
